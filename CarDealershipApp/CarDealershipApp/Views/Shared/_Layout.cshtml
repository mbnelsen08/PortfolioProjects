<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mark's Car Dealership</title>



    
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" integrity="sha384-HSMxcRTRxnN+Bdg0JdbxYKrThecOKuH5zCYotlSAcp1+c8xmyTe9GYg1l9a69psu" crossorigin="anonymous">

    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <!--
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
        -->
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Car Dealership", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Used Inventory", "Used", "Inventory")</li>
                    <li>@Html.ActionLink("New Inventory", "New", "Inventory")</li>
                    <li>@Html.ActionLink("Specials", "Specials", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { Vin = (int?)null }, null)</li>
                    @if (User.IsInRole("sales"))
            {
                <li>@Html.ActionLink("Sales", "Index", "Sales")</li>
            }
                    @if(User.IsInRole("admin"))
            {
                <li class="dropdown">
                    <!--Navbar Dropdown Menu -->
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Admin
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Vehicles", "Vehicles", "Admin")</li>
                        <li>@Html.ActionLink("Users", "Users", "Admin")</li>
                        <li>@Html.ActionLink("Makes", "Makes", "Admin")</li>
                        <li>@Html.ActionLink("Models", "Models", "Admin")</li>
                        <li>@Html.ActionLink("Specials", "Specials", "Admin")</li>
                        <li>@Html.ActionLink("Reports", "Index", "Reports")</li>
                    </ul>
                </li>
            }
                
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>


    <script src="~/Scripts/jquery-3.6.0.js"></script>

    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script>
        $(document).ready(function () {
            DropDown();
        });

        function DropDown() {
            $('.dropdown-toggle').click(function (event) {
                $('.dropdown-toggle').dropdown('toggle');
            });
        }
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
