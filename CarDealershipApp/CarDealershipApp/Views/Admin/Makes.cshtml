@model CarDealershipApp.ViewModels.MakeViewModel
@{
    ViewBag.Title = "Makes";
}

<h2>Makes</h2>

@using (Html.BeginForm("MakeInsert", "Admin", FormMethod.Post))
{
    @Html.ValidationSummary(true)

    <div class="col-md-12">
            <div class="form-group col-md-6">
                <label class="col-md-4"> New Make: </label>
                @Html.TextBoxFor(m => m.MakeToAdd.MakeName, new { @class = "form-control col-md-8" })
                <span class="text-danger">@Html.ValidationMessageFor(m => m.MakeToAdd.MakeName)</span>
            </div>
            <div class="form-group col-md-3">
                <button type="submit" class="btn btn-primary">Add</button>
            </div>
    </div>
}

    <table class="table table-striped">
        <thead>
            <tr>
                <td>Make</td>
                <td>Date Added</td>
                <td>User</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var make in @Model.Makes)
            {
                <tr>
                    <td>@make.MakeName</td>
                    <td>@make.DateAdded.ToShortDateString()</td>
                    <td>@make.UserEmail</td>
                </tr>
            }
        </tbody>
    </table>



