@model CarDealershipApp.Models.Tables.Message

@{
    ViewBag.Title = "Contact Us";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<div class="container">
    <div class="row col-xs-4 col-sm-4 col-md-4">
        @using (Html.BeginForm("AddMessage", "Home", FormMethod.Post))
        {
            @Html.ValidationSummary(true)
            <div class="form-group">
                <label>Name: </label>
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                <span class="text-danger">@Html.ValidationMessageFor(m => m.Name)</span>
            </div>
            <div class="form-group">
                <label>Phone: </label>
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Email: </label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Message: </label>
                @Html.TextAreaFor(m => m.MessageText, new { @class = "form-control" })
                <span class="text-danger">@Html.ValidationMessageFor(m => m.MessageText)</span>
            </div>
            <button type ="submit" class="btn btn-primary">Submit</button>
        }
    </div>

    <div class="mapouter col-xs-8 col-sm-8 col-md-8"><div class="gmap_canvas"><iframe width="600" height="500" id="gmap_canvas" src="https://maps.google.com/maps?q=324%20E%208th%20St,%20Sioux%20Falls,%20SD%2057103&t=&z=15&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe><a href="https://www.whatismyip-address.com/divi-discount/"></a><br>
    <style>
        .mapouter {
            position: relative;
            text-align: right;
            height: 500px;
            width: 600px;
            
        }
    </style><a href="https://www.embedgooglemap.net">embed custom google map</a>
    <style>
        .gmap_canvas {
            overflow: hidden;
            background: none !important;
            height: 500px;
            width: 600px;
            margin: auto;
        }
        .validation-summary-errors {
            color: red;
            font-weight: bold;
        }
    </style></div></div>
</div>

